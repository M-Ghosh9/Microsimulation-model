#include <thread>
#include <mutex>
#include <vector>

void parallelSimulate(Simulation& simulation, int numThreads) {
    std::vector<std::thread> threads;
    for (int i = 0; i < numThreads; ++i) {
        threads.emplace_back(&Simulation::run, &simulation);
    }
    for (auto& t : threads) {
        t.join();
    }
}
